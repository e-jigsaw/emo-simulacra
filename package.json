{
  "name": "emo-simulacra",
  "version": "0.0.0",
  "description": "emo implement by simulacra",
  "main": "index.js",
  "config": {
    "DEST": "build",
    "PORT": "3000"
  },
  "scripts": {
    "before": "mkdir -p $npm_package_config_DEST",
    "build": "npm-run-all before -p build:*",
    "build:bundle": "browserify -t [ @jigsaw/anyify --ls [ livescript?compile ] ] src/index.ls > $npm_package_config_DEST/index.js",
    "build:jade": "jade src/index.jade --out $npm_package_config_DEST",
    "clean": "rm -rf $npm_package_config_DEST",
    "dev": "npm-run-all clean build -p watch serve",
    "serve": "static -p $npm_package_config_PORT $npm_package_config_DEST",
    "watch": "npm-run-all -p watch:*",
    "watch:ls": "chokidar '**/*.ls' -c 'npm run build:bundle'",
    "watch:jade": "chokidar '**/*.jade' -c 'npm run build:jade'"
  },
  "author": "jigsaw (http://jgs.me)",
  "license": "MIT",
  "devDependencies": {
    "@jigsaw/anyify": "^1.0.1",
    "browserify": "^12.0.1",
    "chokidar-cli": "^1.2.0",
    "isomorphic-fetch": "^2.2.0",
    "jade": "^1.11.0",
    "livescript": "^1.4.0",
    "node-static": "^0.7.7",
    "npm-run-all": "^1.3.2",
    "simulacra": "0.0.7"
  }
}
